<Window x:Class="CheckpointApp.Views.PeopleInZoneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Лица и транспорт в погранзоне" Height="700" Width="1000"
        WindowStartupLocation="CenterOwner">
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}"/>
            </StatusBarItem>
        </StatusBar>

        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Content="Обновить" Command="{Binding LoadDataCommand}" Padding="5"/>
            </ToolBar>
        </ToolBarTray>

        <TabControl Margin="5">
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Лица в погранзоне"/>
                        <!-- ИЗМЕНЕНИЕ: Исправлен формат комментария -->
                        <TextBlock Text="{Binding PersonsInZone.SourceCollection.Count, StringFormat=' ({0})'}" Foreground="Gray"/>
                    </StackPanel>
                </TabItem.Header>
                <ListView ItemsSource="{Binding PersonsInZone}" BorderThickness="0">
                    <!-- ИЗМЕНЕНИЕ: Исправлен формат комментария -->
                    <ListView.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <Border Background="LightGray" CornerRadius="3" Padding="5" Margin="0,5,0,2">
                                        <TextBlock FontWeight="Bold" FontSize="14" 
                                                   Text="{Binding Name, FallbackValue='НП не указан'}"/>
                                    </Border>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListView.GroupStyle>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ФИО" DisplayMemberBinding="{Binding FullName}" Width="250"/>
                            <GridViewColumn Header="Дата рожд." DisplayMemberBinding="{Binding Dob}" Width="100"/>
                            <GridViewColumn Header="Паспорт" DisplayMemberBinding="{Binding PassportData}" Width="120"/>
                            <GridViewColumn Header="Гражданство" DisplayMemberBinding="{Binding Citizenship}" Width="120"/>
                            <GridViewColumn Header="Время въезда" DisplayMemberBinding="{Binding Timestamp}" Width="150"/>
                            <GridViewColumn Header="Способ въезда (ТС)" DisplayMemberBinding="{Binding VehicleInfo}" Width="150"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Транспорт в погранзоне"/>
                        <TextBlock Text="{Binding VehiclesInZone.Count, StringFormat=' ({0})'}" Foreground="Gray"/>
                    </StackPanel>
                </TabItem.Header>
                <ListView ItemsSource="{Binding VehiclesInZone}" BorderThickness="0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ТС (Марка/Номер)" DisplayMemberBinding="{Binding VehicleInfo}" Width="250"/>
                            <GridViewColumn Header="Время въезда" DisplayMemberBinding="{Binding Timestamp}" Width="150"/>
                            <GridViewColumn Header="Последний водитель" DisplayMemberBinding="{Binding LastDriverFullName}" Width="250"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>

